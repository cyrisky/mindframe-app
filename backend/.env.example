# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
PORT=5001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mindframe
MONGODB_DB=mindframe

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage

# AWS S3 Configuration (if using S3 storage)
# AWS_S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Email Configuration
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@mindframe.app

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400
PASSWORD_SALT_ROUNDS=12

# PDF Configuration
PDF_TEMP_DIR=./temp/pdf
PDF_MAX_SIZE=52428800

# Template Configuration
TEMPLATE_DIRS=./templates
TEMPLATE_CACHE_TTL=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# Base URL Configuration
BASE_URL=http://localhost:5001
API_BASE_URL=http://localhost:5001

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per hour

# Google Drive Integration
GOOGLE_CREDENTIALS_FILE=./google-service-account-key.json
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id
GOOGLE_DRIVE_ENABLED=true

# File Upload Limits
MAX_CONTENT_LENGTH=16777216

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=detailed
# LOG_FILE=./dev/logs/mindframe.log